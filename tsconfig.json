{
    "exclude": ["./tools"],
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
        "strictBindCallApply": false,
        "noFallthroughCasesInSwitch": false,
        "paths": {
            "@ubs-platform/mona-microservice-setup-util": [
                "libs/microservice-setup-util/src"
            ],
            //   "@ubs-platform/mona-microservice-setup-util/*": [
            //     "libs/microservice-setup-util/src/*"
            //   ],
            "@ubs-platform/users-common": ["libs/users-common/src"],
            //   "@ubs-platform/users-common/*": [
            //     "libs/users-common/src/*"
            //   ],
            "@mona/users/consts": ["libs/users-consts/src"],
            //   "@mona/users/consts/*": [
            //     "libs/users-consts/src/*"
            //   ],
            "@ubs-platform/users-mona-microservice-helper": [
                "libs/users-microservice-helper/src"
            ],
            //   "@ubs-platform/users-mona-microservice-helper/*": [
            //     "libs/users-microservice-helper/src/*"
            //   ],
            "@ubs-platform/users-mona-roles": ["libs/users-roles/src"]
            //   "@ubs-platform/users-mona-roles/*": [
            //     "libs/users-roles/src/*"
            //   ]
        }
    }
}
